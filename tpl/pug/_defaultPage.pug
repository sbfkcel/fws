html
    include ./_fwsMixin
    head
        meta(charset='UTF-8')
        //设置浏览器渲染模式优先为最新
        meta(http-equiv='X-UA-Compatible',content='IE=edge,chrome=1')
        //360默认极速模式
        meta(name='renderer',content='webkit')
        
        if config.isMobile
            //移动端头部兼容
            +metaMobile

            //横竖屏设置
            +metaPolicy(config.policy)
                
        if config.isFullScreen
            +metaFullScreen

        title #{title}
        meta(name='keywords',content=seo_key)
        meta(name='description',content=seo_desc)
        
        link(rel='shortcut icon', href='./images/favicon.ico')
        link(rel='stylesheet', href='./css/public.css')
        block link

        if config.showIosIcon
            //iOS图标设置
            +linkAppleTouchIcon
    body
        block body

        //页面js脚本
        script(src='//$$localhost/staticfile/seajs/3.0.0/sea-debug.js')
        script(src='./js/config.js')

        block script
        
